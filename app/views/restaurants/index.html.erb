<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div class="row">
    <div class="col-10">
      <%= link_to restaurant_path(restaurant), class:"card-product" do %>
        
          <%= image_tag "http://lorempixel.com/200/200/food/#{restaurant.id}"%>
          <div class="card-product-infos">
            <h2><%= restaurant.name %></h2>
            <p>Owned by <%= restaurant.user.email %></p>
          </div>
        
      <% end %>
    </div>
    <div class="col-2">
      <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-flat btn-sm btn-info btn-block" %>
      <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-flat btn-sm btn-danger btn-block" %>
    </div>
  </div>
<% end %>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-flat btn-sm btn-primary" %>
